---
import MainLayout from '../layouts/MainLayout.astro';

const skills = [
  // Languages
  "Java",
  "C#",
  "PHP",
  "SQL/PLSQL",
  "HTML/CSS",
  "JavaScript",

  // Tools & Technologies
  "Linux (Ubuntu/Debian)",
  "Docker & Docker Compose",
  "Proxmox VE",
  "Git & GitHub",
  "PostgreSQL",
  "REST APIs",

  // Concepts & Practices
  "System Design",
  "Database Design",
  "Unit Testing",
  "Test-Driven Development",
  "Agile/Scrum",
  "CI/CD Pipelines"
];

const experiences = [
  {
    role: "Home Server Administrator",
    company: "Personal Homelab",
    period: "2024 - Present",
    description: "Architected and maintain a virtualized infrastructure using Proxmox VE, managing 3 Linux VMs and 15+ Docker containers with near 100% uptime. Implemented automated backup solutions, configured reverse proxy with SSL certificates, and established monitoring dashboards for system health and resource utilization."
  },
  {
    role: "Full-Stack Developer",
    company: "Academic & Personal Projects",
    period: "2024 - Present",
    description: "Designed and developed web applications using PHP, JavaScript, and PostgreSQL. Built RESTful APIs with proper error handling, implemented secure authentication using session management and password hashing, and optimized database queries through indexing and query analysis."
  },
  {
    role: "Backend Developer",
    company: "SteadyPlan - Team Project",
    period: "Fall 2025",
    description: "Led backend development in a team of 4, designing the PostgreSQL database schema and implementing RESTful APIs in PHP. Facilitated Agile practices including weekly standups and sprint planning, resulting in on-time delivery of all planned features. Integrated drag-and-drop task management with real-time database updates."
  }
];
---

<MainLayout title="Jonathan Wirick - Resume">
  <style is:inline>
    @media print {
      @page {
        margin: 0.45in 0.55in;
        size: letter;
      }

      * {
        -webkit-print-color-adjust: exact !important;
        print-color-adjust: exact !important;
      }

      header, footer { display: none !important; }
      main { margin: 0 !important; padding: 0 !important; }

      body {
        font-size: 10.5pt !important;
        line-height: 1.4 !important;
      }

      .max-w-4xl {
        max-width: 100% !important;
        padding: 0 !important;
        margin: 0 !important;
      }

      section {
        page-break-inside: avoid;
        break-inside: avoid;
      }

      .space-y-10 > * + * {
        margin-top: 1rem !important;
      }

      .space-y-8 > * + * {
        margin-top: 0.65rem !important;
      }

      .gap-8 {
        gap: 1.2rem !important;
      }

      .mb-12 {
        margin-bottom: 0.85rem !important;
      }

      .pb-8 {
        padding-bottom: 0.6rem !important;
      }

      .mb-4 {
        margin-bottom: 0.6rem !important;
      }

      .mb-6 {
        margin-bottom: 0.6rem !important;
      }

      .mb-2 {
        margin-bottom: 0.3rem !important;
      }

      .mb-1 {
        margin-bottom: 0.2rem !important;
      }

      h1 {
        font-size: 1.75rem !important;
        margin-bottom: 0.25rem !important;
        line-height: 1.2 !important;
      }

      p.text-xl {
        font-size: 1.05rem !important;
        margin-bottom: 0.6rem !important;
        line-height: 1.3 !important;
      }

      h2.text-xl {
        font-size: 1.1rem !important;
        padding-bottom: 0.4rem !important;
        margin-bottom: 0.6rem !important;
      }

      h3 {
        font-size: 1rem !important;
      }

      .space-y-8 > div {
        margin-top: 0.65rem !important;
      }

      .space-y-8 > div:first-child {
        margin-top: 0 !important;
      }

      .flex-wrap.gap-2 {
        gap: 0.3rem !important;
        row-gap: 0.3rem !important;
      }

      .px-3.py-1 {
        padding: 0.2rem 0.5rem !important;
        font-size: 0.8rem !important;
        line-height: 1.3 !important;
      }

      .leading-relaxed {
        line-height: 1.45 !important;
      }

      .text-sm {
        font-size: 0.85rem !important;
      }

      .flex.flex-wrap.gap-4 {
        gap: 0.85rem !important;
      }

      .w-4.h-4 {
        width: 0.95rem !important;
        height: 0.95rem !important;
      }

      aside .space-y-8 > * + * {
        margin-top: 0.85rem !important;
      }
    }
  </style>

  <!-- Page Content Container -->
  <div class="max-w-4xl mx-auto px-4 py-12 sm:px-6 lg:px-8 print:p-0">
    
    <!-- Action Bar-->
    <div class="flex justify-end mb-8 print:hidden">
      <button 
        onclick="window.print()" 
        class="inline-flex items-center gap-2 bg-slate-900 text-white text-sm font-medium px-4 py-2 rounded-full hover:bg-slate-800 transition-colors shadow-sm"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
          <polyline points="7 10 12 15 17 10"/>
          <line x1="12" x2="12" y1="15" y2="3"/>
        </svg>
        <span>Save as PDF</span>
      </button>
    </div>

    <!-- Resume Header -->
    <div class="mb-12 border-b border-slate-200 pb-8">
      <h1 class="text-4xl font-bold text-slate-900 mb-2">Jonathan Wirick</h1>
      <p class="text-xl text-slate-600 mb-6">CIS Student | Full-Stack Developer | Infrastructure Enthusiast</p>

      <div class="flex flex-wrap gap-4 text-sm text-slate-500">
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
          West Kelowna, BC
        </div>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
          jwirick06@gmail.com
        </div>
        <div class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/></svg>
          github.com/jwirick06
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      
      <!-- Main Content Column -->
      <div class="md:col-span-2 space-y-10">
        <section>
          <h2 class="text-xl font-bold text-slate-900 border-b-2 border-slate-900 pb-2 mb-4">Relevant Experience</h2>
          <div class="space-y-8">
            {experiences.map((job) => (
              <div>
                <div class="flex justify-between items-baseline mb-1">
                  <h3 class="font-bold text-slate-800">{job.role}</h3>
                  <span class="text-sm text-slate-500 font-mono">{job.period}</span>
                </div>
                <p class="text-slate-600 font-medium mb-2">{job.company}</p>
                <p class="text-slate-600 leading-relaxed">{job.description}</p>
              </div>
            ))}
          </div>
        </section>
        
        <section>
          <h2 class="text-xl font-bold text-slate-900 border-b-2 border-slate-900 pb-2 mb-4">Education</h2>
          <div>
            <h3 class="font-bold text-slate-800">Bachelor's in Computer Information Systems</h3>
            <p class="text-slate-600">Okanagan College</p>
            <div class="flex justify-between items-center mt-1">
              <span class="text-sm text-slate-500 font-mono">2024 - Present</span>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                2nd Year
              </span>
            </div>
          </div>
        </section>
      </div>

      <!-- Sidebar Column -->
      <aside class="space-y-8">
        <section>
          <h2 class="text-xl font-bold text-slate-900 border-b-2 border-slate-900 pb-2 mb-4">Skills</h2>
          <div class="flex flex-wrap gap-2">
            {skills.map((skill) => (
              <span class="px-3 py-1 bg-slate-100 text-slate-700 rounded-md text-sm font-medium print:border print:border-slate-300">
                {skill}
              </span>
            ))}
          </div>
        </section>

        <section class="print:hidden">
          <h2 class="text-xl font-bold text-slate-900 border-b-2 border-slate-900 pb-2 mb-4">Connect</h2>
          <p class="text-slate-600 text-sm mb-4">
            I'm currently seeking co-op and internship opportunities for Summer 2026.
          </p>
          <a href="mailto:jwirick06@gmail.com" class="block w-full text-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors">
            Contact Me
          </a>
        </section>
      </aside>

    </div>
  </div>
</MainLayout>
