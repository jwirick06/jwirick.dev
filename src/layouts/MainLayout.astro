---
interface Props {
  title: string;
}

const { title } = Astro.props;

const navItems = [
  { label: 'Home', href: '/' },
  { label: 'Projects', href: '/projects' },
  { label: 'Resume', href: '/resume' },
];
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
      <!-- Google tag (gtag.js) -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-SW6PV3MM20"></script>
      <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-SW6PV3MM20');
      </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body class="bg-slate-50 text-slate-900 font-sans antialiased min-h-screen flex flex-col">
    
    <!-- GLOBAL NAVIGATION -->
    <header class="sticky top-0 z-50 w-full bg-white/90 backdrop-blur border-b border-slate-200">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
        <a href="/" class="font-bold text-xl text-slate-900 tracking-tight hover:text-blue-600 transition-colors">
          Jonathan Wirick
        </a>

        <nav class="hidden sm:flex gap-8">
          {navItems.map((item) => (
            <a 
              href={item.href} 
              class="text-sm font-medium text-slate-600 hover:text-blue-600 transition-colors"
            >
              {item.label}
            </a>
          ))}
        </nav>

        <!-- Mobile Menu Button -->
        <a href="/resume" class="sm:hidden text-sm font-medium text-blue-600">
          My Resume
        </a>
      </div>
    </header>

    <!-- CONTENT -->
    <main class="flex-grow">
      <slot />
    </main>

    <!-- FOOTER -->
    <footer class="bg-white border-t border-slate-200 mt-12">
      <div class="max-w-5xl mx-auto px-4 py-8 sm:px-6 lg:px-8 flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-slate-500">
          Â© {new Date().getFullYear()} Jonathan Wirick. Built with Astro & Tailwind.
        </p>
        <div class="flex gap-6">
          <a href="https://github.com/jwirick06" target="_blank" class="text-slate-400 hover:text-slate-900">
            GitHub
          </a>
          <a href="https://linkedin.com" target="_blank" class="text-slate-400 hover:text-blue-700">
            LinkedIn
          </a>
        </div>
      </div>
    </footer>

  </body>
</html>
